<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<package name="site" namespace="/site" extends="base">
	
		<!--场地类型管理-->
		<action name="addSiteType" class="com.gms.web.action.SiteAction" method="addSiteType">
		</action>
		<action name="getAllSiteType" class="com.gms.web.action.SiteAction" method="getAllSiteType">
			<result name="success">/manager/getAllSiteType.jsp</result>
		</action>
		<action name="deleteSiteType" class="com.gms.web.action.SiteAction" method="deleteSiteType">
		</action>
		<action name="echoData" class="com.gms.web.action.SiteAction" method="echoData">
			<result name="success">/manager/updateSiteType.jsp</result>
		</action>
		<action name="updateSiteType" class="com.gms.web.action.SiteAction" method="updateSiteType">
		</action>
		
		<!--场地管理-->
		<action name="getAllSite" class="com.gms.web.action.SiteAction" method="getAllSite">
			<result name="success">/manager/getAllSite.jsp</result>
		</action>
		<action name="getDataForAddSite" class="com.gms.web.action.SiteAction" method="getDataForAddSite">
			<result name="success">/manager/addSite.jsp</result>
		</action>
		<action name="addSite" class="com.gms.web.action.SiteAction" method="addSite">
		</action>
		<action name="deleteSite" class="com.gms.web.action.SiteAction" method="deleteSite">
		</action>
		<action name="getDataForUpdateSite" class="com.gms.web.action.SiteAction" method="getDataForUpdateSite">
			<result name="success">/manager/updateSite.jsp</result>
		</action>
		<action name="updateSite" class="com.gms.web.action.SiteAction" method="updateSite">
		</action>
		<action name="recoverSite" class="com.gms.web.action.SiteAction" method="recoverSite">
		</action>
		<action name="removeSite" class="com.gms.web.action.SiteAction" method="removeSite">
		</action>
		
		
		<!-- 场地预约 -->
		<action name="getAllSiteOrder" class="com.gms.web.action.SiteAction" method="getAllSiteOrder">
			<result name="success">/manager/getAllSiteOrder.jsp</result>
		</action>
		
	</package>
</struts>
